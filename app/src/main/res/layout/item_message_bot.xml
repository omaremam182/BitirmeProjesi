<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp"
    android:gravity="start">

    <!-- BOT TEXT -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bot_message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- BUTTON ROW BELOW MESSAGE -->
    <LinearLayout
        android:id="@+id/bot_buttons_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <ImageButton
            android:id="@+id/btn_copy"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/listen_btn_bg"
            android:src="@drawable/copy_btn_32"
            android:padding="4dp"
            android:layout_marginHorizontal="8dp"/>

        <ImageButton
            android:id="@+id/btn_voice"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/listen_btn_bg"
            android:src="@drawable/speaker_btn_32"
            android:padding="4dp"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</LinearLayout>
